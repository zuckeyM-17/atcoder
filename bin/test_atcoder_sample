#!/bin/bash

problem_name=$1
test_dir=test/${problem_name}
base_url=${problem_name%_*}
base_url=${base_url/_/-}

if [ ! -e ${test_dir} ]; then
    oj dl -d test/${problem_name} https://atcoder.jp/contests/${base_url}/tasks/${problem_name//-/_}
fi

oj test -c "go run ./problems/${problem_name}.go" -d test/${problem_name}